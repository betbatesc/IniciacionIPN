<div class="row">
  <div class="col m6 offset-m3 center">
    <h5>Ingresar</h5>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-field">    
    <%= f.email_field :email, :class => "validate", :placeholder => "Email"  %>
  </div>
  <div class="input-field">    
    <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "Password" %>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">Ingresar</button>
<% end %>
  </div>
</div>